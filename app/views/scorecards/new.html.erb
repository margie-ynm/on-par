<div class="course-detail">
  <h3>Confirm Date:</h3>
  <div class="form-group">
    <%= form_for @scorecard, url: course_scorecards_path(@scorecard.course_id) do |f|%>
      <%= f.label "Date" %>
      <%= f.date_select :playdate, value: Time.new %>
      <%= f.submit "Start Scorecard", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
