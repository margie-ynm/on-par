<% if @courses.any? %>
  <center><h3>Courses:</h3></center>
  <% @courses.each do |course| %>
    <div class="course-results">
      <h4> <%= link_to course.name, course_path(course.id) %> </h4>
    </div>
  <% end %>
<% else %>
  <div class="course-results">
    <h3>No course found. Please check spelling and try again.</h3>
  </div>
<% end %>
